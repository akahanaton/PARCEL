{
    "_comments": "$HOME, $PARCELDB and $PARCELSCRIPTS should be defined in advance",
    "_comments": "parameters for cutting adaptor and mapping",
    "ADAPTER": {
        "A": "AGATCGGAAGAGCAC",
        "B": "CTACAGTCCGACGATC",
    },
    "SAMPLEINFO": "${HOME}/prog/parcel/C.albicans/sampleList_Calb.txt",
    "INPUTDIR": "${HOME}/prog/parcel/C.albicans/fastq/",
    "RESULTROOT": "${HOME}/prog/parcel/C.albicans/parcelResultSunMiaoFast/",
    "COMPAREBATCH": "batch45",
    "CONTROL": "glu100",

    "_comments": "parameters for calling differential sites",
    "REFTYPE": "Transcriptome",
    "VSALL": "F",
    "TOPCOV": "0",
    "AUTOBATCH": "F",
    "EXACTTEST": "F",
    "POSFILE": " ",
    "EVALUECUT": "1",
    "WFC": "0.25",
    "NUMHIT": "5",
    "ISMERGE": "F",
    "SPLITBY": "NULL",
    "DOWNSAMPLEPROP": "1",
    "COVMIN": "2",
    "MISMATCH": "1",
    "MAPMODEL": "global",

    "_comments": "files used in mapping",
    "REFTRANSCRIPT": "${PARCELDB}/C.albican/C_albicans_orf_addUTRs",
    "REFTRANSCRIPTFASTA": "${PARCELDB}/C.albican/C_albicans_genes_Snyder_UTRs.fa",
